@{
    ViewData["Title"] = "Bootstrap Grid";
}
<h1>@ViewData["Title"]</h1>

<div class="container">

  <div class="row">
    <div class="col-md-12" style="background-color: mistyrose; text-align: center;">12 cols text-center</div>
  </div>
  <div class="row">
    <div class="col-md-6" style="background-color: #71c1d1; text-align: left;">6 cols text-left</div>
    <div class="col-md-6" style="background-color: paleturquoise; text-align: right;">6 cols text-right</div>
  </div>
  <div class="row">
    <div class="col-12 col-md-7" style="background-color: #de95e8; text-align: left;">7 cols text-left</div>
    <div class="col-6 col-md-3" style="background-color: #cf75f0; text-align: center;">3 cols text-center</div>
    <div class="col-6 col-md-2" style="background-color: #cda2f2; text-align: right;">2 cols text-right</div>
  </div>
  <div class="row">
    <div class="col-12 col-md-4" style="background-color: #f5aa9f; text-align: left;">4 cols text-left</div>
    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-6 col-md-3" style="background-color: #f5ca9f; text-align: center;">1</div>
        <div class="col-6 col-md-3" style="background-color: #f4f59f; text-align: center;">2</div>
        <div class="col-6 col-md-3" style="background-color: #d5f59f; text-align: center;">3</div>
        <div class="col-6 col-md-3" style="background-color: #9ff5af; text-align: center;">4</div>
        <div class="col-6 col-md-3" style="background-color: #9ff5eb; text-align: center;">5</div>
        <div class="col-6 col-md-3" style="background-color: #9fc0f5; text-align: center;">6</div>
        <div class="col-6 col-md-3" style="background-color: #ca9ff5; text-align: center;">7</div>
        <div class="col-6 col-md-3" style="background-color: #f59fec; text-align: center;">8</div>
      </div>
    </div>
  </div>
</div>